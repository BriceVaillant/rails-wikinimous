<ul>
  <% @articles.each do |article| %>

    <li style="display: flex; flex-flow: row; margin: 12px;">
      <h3 style="margin: 24px;"><%= link_to article.title, article_path(article) %></h3>
      <h3 style="margin: 24px;"><%= article.content %></h3>
    </li>
  <% end %>
</ul>

<%= link_to "+ create a new article", new_article_path() %>
